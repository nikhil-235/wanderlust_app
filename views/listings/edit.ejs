<%=layout("/layouts/boilerplate") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
    <h2>Edit a Listing</h2>
    <form autocomplete="off" class="needs-validation" method="post" action="/listings/<%= data._id%>?_method=PUT" novalidate enctype="multipart/form-data">
        <div>
            <label for="title" class="form-label">Title</label>
            <input name="listing[title]" class="form-control" type="text" placeholder="enter tittle" value="<%= data.title%>" required>
        <div class="invalid-feedback">Tittle should be invlaid</div>
        </div>
        <div>
            <label for="description" class="form-label">Description</label>
           <textarea name="listing[description]" class="form-control" id="" placeholder="Enter description"  required><%= data.description %></textarea>
           <div class="invalid-feedback">Please enter short description</div>

        </div>
        <div class="mb-3 mt-2">
            Original Listing Image <br>
            <img height="150px"  src="<%=originalImageUrl%>">
        </div>
        <div>
            <label for="image" class="form-label">Upload New Image</label>
            <input name="listing[image]" class="form-control image" type="file" >
            <div class="invalid-feedback">Image should be valid link</div>
        </div>
        <div class="row">
         <div class="col-md-5">
            <label for="price" class="form-label">Price</label>
            <input type="number" listing[ class="form-control" placeholder="enter your price" name="listing[price]" value="<%= data.price%>" required>
             <div class="invalid-feedback">Price should be invalid</div>

        </div>
        <div class="col-md-7">
            <label for="country" class="form-label">Country</label>
        <input type="text" class="form-control" name="listing[country]" placeholder="enter your country" value="<%= data.country%>" aria-required="">
        <div class="invalid-feedback">Country should be invalid</div>

        </div>
        </div>
        <div>
            <label for="location" class="form-label">Location</label>
        <input type="text" class="form-control" name="listing[location]" placeholder="enter location" value="<%= data.location%>" required>
        <div class="invalid-feedback">Location should be invalid</div>
        </div>
        
        <button class="btn edit-btn mt-3">Edit</button>
    </form>
   </div>
    </div>
</body>