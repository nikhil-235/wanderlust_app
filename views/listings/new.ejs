<%=layout("/layouts/boilerplate") %>

<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
    <h2>Creating a new listing</h2>
    <form  autocomplete="off" method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-lablel">Title</label>
        <input name="listing[title]" type="text" placeholder="Add a catchy title" class="form-control" required>
        <div class="invalid-feedback">Tittle should be invlaid
            
        </div>
    </div>
        <div class="mb-3"> 
            <label for="name" class="form-label">Description</label>
            <textarea name="listing[description]" id="" placeholder="Add a description" class="form-control" required></textarea>
            <div class="invalid-feedback">Please enter short description</div>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Upload Image</label>
              <input type="file" name="listing[image]"  class="form-control" required>
        </div>
        <div class="row">
   <div class="mb-3 col-md-5">
            <label for="price" class="form-label">Price</label>
             <input  placeholder="1500" name="listing[price]" class="form-control" required>
             <div class="invalid-feedback">Price should be invalid</div>
        </div>
        <div class="mb-3 col-md-7">
            <label for="country" class="form-label">Country</label>
             <input type="text" name="listing[country]" placeholder="India" class="form-control" required>
             <div class="invalid-feedback">Country should be invalid</div>

        </div>

        </div>
     
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
             <input type="text" name="listing[location]" placeholder="jaipur,Rajasthan" class="form-control" required>
             <div class="invalid-feedback">Location should be invalid</div>

        </div>
         <div class="mb-3">
            <label for="cateogry" class="form-label">Cateogry</label>
            <select class="form-select" name="listing[cateogry]" required>
                <option value="" selected disabled>Select a category</option>
                <option value="Mountains">Mountains</option>
                <option value="Castles">Castles</option>
                <option value="Rooms">Rooms</option>
                <option value="Trending">Trending</option>
                <option value="AmazingPools">AmazingPools</option>
                <option value="Camping">Camping</option>
                <option value="Farms">Farms</option>
                <option value="Arctic">Arctic</option>
                <option value="Iconic Cities">Iconic Cities</option>
            </select>
             
    
        </div>
        
        <button class="addbtn btn btn-dark">Add</button>
    </form>
</div>
    </div>
</body>